<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/square_button_white2"
    android:padding="4dp"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/bookingId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:padding="2dp"
        android:background="@drawable/square_button_white"
        android:drawableLeft="@drawable/id_24"
        android:gravity="center"
        android:text="bookingId\nxx" />

    <TextView
        android:id="@+id/roomId"
        android:padding="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookingId"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/square_button_white"
        android:drawableLeft="@drawable/room_24"
        android:gravity="center"
        android:text="roomId\nxx" />

    <TextView
        android:id="@+id/orderId"
        android:padding="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roomId"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/square_button_white"
        android:drawableLeft="@drawable/order_24"
        android:gravity="center"
        android:text="orderID\nxx" />


    <TextView
        android:id="@+id/time_start"
        android:padding="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orderId"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/square_button_white"
        android:drawableLeft="@drawable/timeline_24"
        android:gravity="center"
        android:text="TimeStart:" />

    <TextView
        android:id="@+id/statusCode"
        android:padding="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_start"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/square_button_white"
        android:drawableLeft="@drawable/status_24"
        android:gravity="center"
        android:text="Status" />

    <TextView
        android:id="@+id/checkin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:drawableTop="@drawable/checkin_36"
        android:gravity="center"
        android:text="Checkin" />
    <TextView
        android:id="@+id/cancel_booking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkin"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:drawableTop="@drawable/cancel2_45"
        android:gravity="center"
        android:text="Cancel\nBooking" />






</RelativeLayout>