<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username:"
        android:fontFamily="monospace"
        android:textSize="16dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="200dp" />

    <EditText
        android:id="@+id/txt_username"
        android:drawableLeft="@drawable/icon_avatar_x24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvuser"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="monospace"
        android:textSize="16dp" />
    <TextView
        android:layout_below="@+id/txt_username"
        android:id="@+id/tvpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:fontFamily="monospace"
        android:textSize="16dp"
        android:layout_marginHorizontal="20dp" />

    <EditText
        android:id="@+id/txt_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvpass"
        android:layout_marginHorizontal="20dp"
        android:drawableLeft="@drawable/icon_padlock_x24"
        android:inputType="textPassword"
        android:fontFamily="monospace"
        android:textSize="16dp" />

    <RelativeLayout
        android:layout_marginTop="16dp"
        android:layout_below="@+id/txt_pass"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login_35_v2"

            android:textColor="@color/white"

            android:textStyle="bold" />

        <Button
            android:visibility="gone"
            android:id="@+id/btn_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_toEndOf="@+id/btn_login"
            android:background="@drawable/btn_focused"
            android:text="SIGN IN"
            android:textColor="@color/white"

            android:textStyle="bold" />
    </RelativeLayout>



</RelativeLayout>