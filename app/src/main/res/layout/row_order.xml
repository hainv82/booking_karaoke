<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout
    android:layout_width="match_parent"
    android:id="@+id/swipe_layout"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:mode="same_level"
    app:dragEdge="right"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Your secondary layout here -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/layout_update"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/edt_sl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="SL(+)" />
        <TextView
            android:id="@+id/tv_order_item"
            android:layout_toEndOf="@id/edt_sl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/order_24"
            android:text="Order" />
    </RelativeLayout>

    <!-- Your main layout here -->
    <RelativeLayout
        android:id="@+id/main_layout"
        android:background="@drawable/square_button_white2"
        android:layout_width="match_parent"
        android:padding="3dp"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Ten san pham" />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/item_name"
            android:id="@+id/item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10.000 d " />

        <TextView
            android:id="@+id/item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_price"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/tag2_24"
            android:gravity="center"
            android:text=" ID " />


    </RelativeLayout>

</com.chauthai.swipereveallayout.SwipeRevealLayout>

