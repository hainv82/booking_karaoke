<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_dialog_confirm_otp"
    android:background="@drawable/border_dialog_2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_thongbao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="Xác nhận"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/tv_close_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:src="@drawable/ic_close_35" />

    <TextView
        android:id="@+id/tv_mess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_thongbao"
        android:gravity="center"
        android:paddingHorizontal="5dp"
        android:paddingVertical="15dp"
        android:text="Nhập mã OTP đã được gửi về máy của KH !"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/edt_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_mess"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/border_edt"
        android:paddingHorizontal="10dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_otp"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_resend_otp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/border_button"
            android:paddingHorizontal="10dp"
            android:text="Resend OTP"
            android:textColor="@color/x_red" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@+id/btn_resend_otp"
            android:background="@drawable/border_button"
            android:paddingHorizontal="10dp"
            android:text="Confirm"
            android:textColor="@color/x_blue" />


    </RelativeLayout>

</RelativeLayout>